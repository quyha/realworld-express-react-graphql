{
  "name": "@app/backend",
  "version": "1.0.0",
  "main": "./build/index.js",
  "license": "MIT",
  "scripts": {
    "dev": "env-cmd -f .env.development nodemon src/index.ts",
    "test": "env-cmd -f .env.test jest --watch --runInBand",
    "build": "rimraf build && ttsc -p ./ && env-cmd -f .env node ./build/index.js",
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "eslint ./src --fix"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.15",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.14.10",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.14.0",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "11",
    "eslint-plugin-promise": "4",
    "eslint-plugin-standard": "4",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "rimraf": "^3.0.2",
    "supertest": "^6.0.1",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.1.2",
    "typescript-transform-paths": "^2.1.0"
  },
  "dependencies": {
    "apollo-server": "^2.19.1",
    "bcrypt": "^5.0.0",
    "env-cmd": "^10.1.0",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "graphql-tools": "^7.0.2",
    "joi": "^17.3.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.11",
    "mongoose-beautiful-unique-validation": "^7.1.1"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "execMap": {
      "ts": "node --require ts-node/register --require tsconfig-paths/register"
    }
  }
}
